#!/usr/bin/env bash

HOSTNAME=$(grep "Host " $HOME/.ssh/config | cut -d' ' -f2 | sort | fzf --tmux 100%,100%,border-native --prompt "[ssh] ")

if [ -n "$HOSTNAME" ]; then

   case $1 in
      -v | -h )
         tmux split-window $1 ssh $HOSTNAME;;
      *)
         tmux new-window -n "ssh - $HOSTNAME" ssh $HOSTNAME ;;
   esac

   case $HOSTNAME in
      dev*)
         tmux select-pane -P 'fg=cyan' ;;
      public)
         tmux select-pane -P 'fg=red' ;;
      *)
         tmux select-pane -P 'fg=white' ;;
   esac
fi

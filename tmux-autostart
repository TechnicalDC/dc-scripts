#!/usr/bin/env bash

JOURNAL_DIR="$HOME/Notes/journal/$(date +%Y)/$(date +%m)"
JOURNAL="$JOURNAL_DIR/$(date +%d_%m_%Y).md"

session=$(tmux ls | grep attached | cut -d ":" -f 1)

case $session in
   "work")
      tmux send -t $session:1 "nvim ~/Notes/todo.md" ENTER

      tmux new-window -t $session:2 -n "notes"
      tmux send -t $session:2 "notebook" ENTER

      tmux new-window -t $session:3 -n "tickets"
      tmux send -t $session:3 "nvim ~/Notes/tickets.md" ENTER
      ;;
esac
